@model ESD6NL.DriverSystem.Models.UserViewModel

@{
    ViewData["Title"] = "Facturen";
}

<h2>Facturen</h2>

<table class="table  table table-striped table-bordered table-responsive table-condensed">
    <thead>
        <tr>
            <th>Factuur</th>
            <th>Datum</th>
            <th>Totaal kilometers gereden</th>
            <th>Totaal bedrag</th>
            <th>Status</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var invoice in Model.invoices)
            {
                <text>
                    <tr>
                        <td><a asp-action="Details" asp-controller="Invoice" asp-route-id="@invoice.invoiceID">@invoice.invoiceNumber</a></td>
                        <td>@invoice.period</td>
                        <td>@invoice.totalKm</td>
                        <td>@invoice.totalAmount</td>
                        <td>@invoice.paymentStatus</td>
                    </tr>
                </text>

            }
        }

    </tbody>
</table>

