@using ESD6NL.DriverSystem.Helpers
@model ESD6NL.DriverSystem.Models.RegistrationModel

@{
    ViewData["Title"] = "Index";
}

<h2>@Html.getTerm("Registration")</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="FirstName">@Html.getTerm("First name")</label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="LastName">@Html.getTerm("Last name")</label>
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CitizenServiceNumber">@Html.getTerm("Citizen Service Number")</label>
                <input asp-for="CitizenServiceNumber" class="form-control"/>
                <span asp-validation-for="CitizenServiceNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Username">@Html.getTerm("Username")</label>
                <input asp-for="Username" class="form-control"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">@Html.getTerm("E-mail")</label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password">@Html.getTerm("Password")</label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PasswordRepeat">@Html.getTerm("Repeat Password")</label>
                <input asp-for="PasswordRepeat" class="form-control"/>
                <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@Html.getTerm("RegisterButton") class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
